<suite name="AutomationPractice Suite" parallel="tests"
	thread-count="3">
	<test name="Chrome Tests">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.automationpractice.tests.HomepageTest" />
			<class name="com.automationpractice.tests.SearchTest" />
			<class name="com.automationpractice.tests.SwitchTabTest" />
			<class name="com.automationpractice.tests.LoginTest" />
			<class name="com.automationpractice.tests.CreateAccountTest" />
			<class name="com.automationpractice.tests.HomeBannersTest" />
		</classes>
	</test>

	<test name="Firefox Tests">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.automationpractice.tests.HomepageTest" />
			<class name="com.automationpractice.tests.SearchTest" />
			<class name="com.automationpractice.tests.SwitchTabTest" />
			<class name="com.automationpractice.tests.LoginTest" />
			<class name="com.automationpractice.tests.CreateAccountTest" />
			<class name="com.automationpractice.tests.HomeBannersTest" />

		</classes>
	</test>

	<test name="Edge Tests">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.automationpractice.tests.HomepageTest" />
			<class name="com.automationpractice.tests.SearchTest" />
			<class name="com.automationpractice.tests.SwitchTabTest" />
			<class name="com.automationpractice.tests.LoginTest" />
			<class name="com.automationpractice.tests.CreateAccountTest" />
			<class name="com.automationpractice.tests.HomeBannersTest" />


		</classes>
	</test>
</suite>
